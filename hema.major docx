class Student:
    def __init__(self, name, roll_number):
        self.name = name
        self.roll_number = roll_number
        self.marks = {}

    def add_marks(self, subject, marks):
        self.marks[subject] = marks

    def view_marks(self):
        print(f"Marks for {self.name} (Roll Number: {self.roll_number}):")
        for subject, mark in self.marks.items():
            print(f"  - {subject}: {mark}")

    def calculate_average(self):
        average = sum(self.marks.values()) / len(self.marks)
        print(f"Average marks for {self.name}: {average:.2f}")

    def grade(self):
        average = self.calculate_average()
        if average >= 90:
            return "A"
        elif average >= 80:
            return "B"
        elif average >= 70:
            return "C"
        elif average >= 60:
            return "D"
        else:
            return "F"
            
class StudentPerformanceTracker:
    def __init__(self):
        self.students = {}

    def add_student(self, name, roll_number):
        self.students[roll_number] = Student(name, roll_number)

    def view_student(self, roll_number):
        student = self.students.get(roll_number)
        if student:
            student.view_marks()
        else:
            print("Student not found.")

    def calculate_class_average(self):
        total_average = 0
        count = 0
        for student in self.students.values():
            total_average += student.calculate_average()
            count += 1
        print(f"Class average: {total_average / count:.2f}")

def main():
    tracker = StudentPerformanceTracker()

    while True:
        print("\nOptions:")
        print("1. Add student")
        print("2. Add marks")
        print("3. View student marks")
        print("4. Calculate student average")
        print("5. Calculate class average")
        print("6. View student grade")
        print("7. Exit")

        choice = input("Choose an option: ")

        if choice == "1":
            name = input("Enter student name: ")
            roll_number = input("Enter roll number: ")
            tracker.add_student(name, roll_number)
        elif choice == "2":
            roll_number = input("Enter roll number: ")
            subject = input("Enter subject: ")
            marks = float(input("Enter marks: "))
            tracker.students[roll_number].add_marks(subject, marks)
        elif choice == "3":
            roll_number = input("Enter roll number: ")
            tracker.view_student(roll_number)
        elif choice == "4":
            roll_number = input("Enter roll number: ")
            tracker.students[roll_number].calculate_average()
        elif choice == "5":
            tracker.calculate_class_average()
        elif choice == "6":
            roll_number = input("Enter roll number: ")
            print(f"Grade for {tracker.students[roll_number].name}: {tracker.students[roll_number].grade()}")
        elif choice == "7":
            break
        else:
            print("Invalid option. Please try again.")

if __name__ == "__main__":
    main()



